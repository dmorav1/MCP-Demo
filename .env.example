# Environment variables template
# Copy this file to .env and update with your values

DATABASE_URL=postgresql+psycopg://mcp_user:mcp_password@localhost:5432/mcp_db
OPENAI_API_KEY=sk-your_openai_api_key_here
EMBEDDING_PROVIDER=local
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=1536
MCP_TRANSPORT=stdio

# Embedding Provider Options:
# - local: sentence-transformers (default, no API key needed)
# - openai: OpenAI API (requires OPENAI_API_KEY)
# - fastembed: FastEmbed library (no API key needed)

# For Docker deployment with SSE transport
# MCP_TRANSPORT=sse
# MCP_PORT=3000

# Cache Configuration
CACHE_ENABLED=true
CACHE_BACKEND=memory
# CACHE_BACKEND=redis  # Use Redis for production
CACHE_REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000
EMBEDDING_CACHE_TTL=86400
SEARCH_CACHE_TTL=1800
LLM_CACHE_TTL=3600

# Observability Configuration
LOG_LEVEL=INFO
USE_JSON_LOGS=true
LOG_FILE=logs/mcp-backend.log
JAEGER_HOST=localhost
JAEGER_PORT=6831
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SLOW_REQUEST_THRESHOLD=1.0
ENABLE_CONSOLE_TRACING=false
OTLP_ENDPOINT=
